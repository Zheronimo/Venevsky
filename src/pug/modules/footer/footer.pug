mixin footerNavLink(link,text,descr)
	li.footer-nav__item
		a(href=link).footer-nav__link=text
		if(descr)
			span.footer-nav__descr=descr

footer.footer
	.footer-top
		.container
			.footer-callback
				img(src="static/img/general/wiki.png", alt="Фото иконки wikipedia").footer-callback__img
				include ../callback/order-callback

	.footer-main
		.container
			.footer__col
				span.footer__title О нас
				ul.footer-nav__list
					+footerNavLink("","Оплата и доставка","")
					+footerNavLink("","Гарантия","")
					+footerNavLink("","Услуги по обработке металла","")
					+footerNavLink("","Компания","")
					+footerNavLink("","Контакты","связь с директором")
			.footer__col
				span.footer__title Каталог
				ul.footer-nav__list
					+footerNavLink("","Все для кровли","")
					+footerNavLink("","Фасад","")
					+footerNavLink("","Профнастил","")
					+footerNavLink("","Листовой прокат","")
					+footerNavLink("","Рулонная сталь","")
			.footer__col
				.footer__block
					span.footer__title Принимаем к оплате
					.payment-types
						ul.payment-types__list
							li.payment-types__item
								img(src="static/img/general/visa.svg" alt="visa-logo").payment-types__logo
							li.payment-types__item
								img(src="static/img/general/master.svg" alt="visa-logo").payment-types__logo
						a(href="").link-underline.link-yellow Оплата заказа онлайн
				.footer__block
					span Акции и спецпредложение
			.footer__col
				span.footer__title Контакты
				.footer__block
					.footer-contacts
						+icon("location","footer-contacts__icon")
						span.footer-contacts__title Офис
						p.footer-contacts__text 111033, Москва, ул.Золоторожский вал, д. 11, стр. 9
							a(href="").footer-contacts__link на карте
				.footer__block
					.footer-contacts
						+icon("location","footer-contacts__icon")
						span.footer-contacts__title Производство и склад
						p.footer-contacts__text Московская обл., Ленинский р-н, г. Видное, Северная видновская промзона, ФГУП "Комплекс"
							a(href="").footer-contacts__link на карте
	.footer-bottom
		.container
			.footer-bottom__line
				span.copyright &copy; 2018 Завод "Венёвский"
				a(href="").footer-bottom__link Политика конфиндециальности
				a(href="").footer-bottom__link Карта сайта
			.footer-bottom__line
				p.footer-bottom__text Сайт venev.ru носит исключительно информационный характер и ни при каких условиях не является публичной офертой, определяемойположениями ГК РФ.
				p.footer-bottom__text Для полученя подобной информации о наличии, видах, характеристиках и стоимости материалов, пожалуйста, обращайтесь в офисы продаж.