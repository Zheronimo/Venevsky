header.header
	.header-top
		.container
			.location.header-top__location
				.location__header
					+icon('location','location__icon')
					span.location__current Нижний новгород
				.location__body
			include ../navigation/main-nav
			.user-nav.header-top__user-nav
				a.user-nav__link(href="#") Войти
	.header-main
		.container
			.logo
				img.logo__img(src="static/img/logo.svg", alt="Venevsky")
				span.logo__text Продажа стройматериалов
			include ../navigation/catalog-nav
			.search.header-main__search
				input(placeholder="Артикул или название товара").input-field.input-field--size-small
				+icon("search","search__icon")
			include ../callback/order-callback
			include ../basket/basket-prev

